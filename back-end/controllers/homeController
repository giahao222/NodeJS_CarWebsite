const Car = require('../models/Car');


exports.getAllCar = async(req, res) =>{
    try{
        const cars = await Car.find();
        res.json(cars);
    }catch(err){
        res.status(500).json({message: err.message});
    }
}

exports.getCarById = async(req, res) =>{
    try{
        const car = await Car.findById(req.params.id);
        res.json(car);
    }catch(err){
        res.status(404).json({message: err.message});
    }
}

exports.getCarFilter = async (req, res) => {
    const { year, style, brand, color } = req.query;

    // Tạo một object `query` chứa các điều kiện lọc
    const query = {};
    if (year) query.year = year;
    if (style) query.style = style;
    if (brand) query.brand = brand;
    if (color) query.color = color;

    try {
        const filteredCars = await Car.find(query);
        res.json(filteredCars);
    } catch (err) {
        res.status(500).json({ message: err.message });
    }
}

exports.deleteCar = async (req, res) => {
    try {
      const doc = await Car.findByIdAndDelete(req.params.id);
      if (!doc) return res.status(404).json({ message: 'Not found' });
      res.json({ ok: true });
    } catch (err) {
      res.status(500).json({ message: err.message });
    }
  };
  
  exports.updateCar = async (req, res) => {
    try {
      const doc = await Car.findByIdAndUpdate(req.params.id, req.body, { new: true, runValidators: true });
      if (!doc) return res.status(404).json({ message: 'Not found' });
      res.json(doc);
    } catch (err) {
      res.status(400).json({ message: err.message });
    }
  };


